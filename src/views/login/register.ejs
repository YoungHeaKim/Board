<% include ../partials/header.ejs %>

<div class="roow">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">회원가입</h3>
      </div>
      <div class="panel-body">
        <form role="form" action="/user/register" id="join_form" method="post">
          <fieldset>
            <div class="form-group">
              <input class="form-control" placeholder="email" name="email" type="text" required="true">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="Password" name="password" type="password" required="true">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="Password 확인" name="password2" type="password" required="true">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="이름" name="name" type="text">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="nickname" name="nickname" type="text" required="true">
            </div>
            <input type="submit" class="btn btn-lg btn-success btn-block" value="가입하기">
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>