<div class="roow">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">회원 수정</h3>
      </div>
      <div class="panel-body">
        <form role="form" action="/user/edit" id="join_form" method="post">
          <fieldset>
            <div class="form-group">
              <input class="form-control" placeholder="Password" name="checkPassword" type="password" required="true">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="새로운 Password" name="newPassword" type="password" required="true">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="nickname" name="newNickname" type="text" required="true">
            </div>
            <input type="submit" class="btn btn-lg btn-success btn-block" value="수정하기">
            <a href="/article/lists" class="btn btn-lg btn-success btn-block">뒤로가기</a>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

